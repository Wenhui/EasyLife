<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easylife"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/easylifelog"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".HomePage"
            android:label="@string/homepage_title" >
            <intent-filter>
                <action android:name="com.example.easylife.homepage" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        
         <activity
            android:name=".Add"
            android:label="ADD" >
            <intent-filter>
                <action android:name="com.example.easylife.add" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Report"
            android:label="REPORT" >
            <intent-filter>
                <action android:name="com.example.easylife.report" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        
    </application>

</manifest>